{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": {
      "@peeto/core": ["packages/core/src"],
      "@peeto/extension": ["packages/extension/src"],
      "@peeto/render-react": ["packages/render-react/src"],
      "@peeto/render-vue": ["packages/render-vue/src"]
    }
  },
  "include": ["packages/*/src", "vue-shim.d.ts"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
